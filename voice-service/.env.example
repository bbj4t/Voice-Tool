# Voice Service - Environment Variables
# Copy to .env and fill in your values

# ============================================
# RunPod Serverless Endpoints (REQUIRED)
# ============================================

# RunPod API Key (get from runpod.io settings)
RUNPOD_API_KEY=your-runpod-api-key

# STT Endpoint: Faster Whisper 1.0.10
# Input: audio_base64, model (base/turbo/large-v3), language
# Output: text transcription
RUNPOD_STT_ENDPOINT=rxfzl47istu4i2

# TTS Endpoint: Chatterbox TTS v0.2.6
# Input: text, exaggeration (0.5), temperature (0.8), cfg_weight (0.5)
# Optional: audio_prompt_base64 for voice cloning
# Output: audio_base64 (WAV)
RUNPOD_TTS_ENDPOINT=8bj9tg60e7nw6y

# ============================================
# LLM Providers (optional - configure via UI or set here)
# ============================================

# OpenRouter (recommended - access to many models)
OPENROUTER_API_KEY=your-openrouter-key

# Direct Provider Keys (optional)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GROQ_API_KEY=your-groq-key

# Local Ollama (no key needed, just set base URL)
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Server Configuration (optional)
# ============================================

# Server host and port
HOST=0.0.0.0
PORT=8765

# CORS settings (comma-separated origins, or * for all)
CORS_ORIGINS=*
